<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>TinyClone | Mis URLs</title>

  <!-- BOOTSTRAP CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
  <%- include('partials/_header'); %>
  
  <main class="container my-4">
    <h1 class="display-4 text-center">Mis URLs ðŸ”—</h1>
    <table class="table table-hover mx-auto" style="max-width: 85%">
      <thead class="primary text-center">
        <tr>
          <th scope="col">TinyURL</th>
          <th scope="col">URL Original</th>
          <th scope="col">Editar</th>
          <th scope="col">Borrar</th>
        </tr>
      </thead>
      <tbody>
        
        <% urls.forEach(url => { %>
          <tr>
            <td class="text-center">
              <a href="/u/<%= url.urlID %>"><%= url.urlID %></a>
            </td>
            <td class="text-truncate" style="max-width: 150px;">
              <a href="<%= url.longURL %>"><%= url.longURL %></a>
            </td>
            <td class="text-center">
              <form action="/urls/<%= url.urlID %>" method="GET">
                <button type="submit" class="btn btn-warning">Editar</button>
              </form>
            </td>
            <td class="text-center">
              <form action="/api/v1/urls/<%= url.urlID %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger">Borrar</button>
              </form>
            </td>
          </tr>
        <% }); %>
          
      </tbody>
    </table>
  </main>
  
  <!-- BOOTSTRAP BUNDLE JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
